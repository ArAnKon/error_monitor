{
  "manifest_version": 3,
  "name": "Error Monitor",
  "version": "1.5",
  "description": "Показывает ошибки текущей вкладки в виде popup с скриншотами",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "webRequest",
    "storage",
    "unlimitedStorage"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js",
        "screenshot.js"
      ],
      "css": ["styles/notification.css"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Error Monitor",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "styles/*",
        "history.html",
        "history.js",
        "history.css",
        "screenshot.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}