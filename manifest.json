{
  "manifest_version": 3,
  "name": "Error Monitor",
  "version": "1.0",
  "description": "Показывает ошибки текущей вкладки в виде popup",
  "permissions": ["activeTab", "scripting", "tabs", "webRequest", "storage"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/notification.css"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Error Monitor",
    "default_icon": "icons/icon.png"
  },

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "web_accessible_resources": [
    {
      "resources": ["styles/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}